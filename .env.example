# ============================================
# Outreach Agent Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# --------------------------------------------
# Backend Server Configuration
# --------------------------------------------
APP_HOST=0.0.0.0
APP_PORT=8000
DATABASE_URL=sqlite:///./data/outreach.db
LOG_LEVEL=INFO

# --------------------------------------------
# Pipeline Modes
# --------------------------------------------
# DRY_RUN: When true, emails are logged but not actually sent
# AI_MODE: When true, uses Groq AI for enrichment (requires GROQ_API_KEY)
DRY_RUN=true
AI_MODE=false

# Rate limiting and retry configuration
RATE_LIMIT_PER_MINUTE=10
MAX_RETRIES=2

# --------------------------------------------
# SMTP Configuration (for Live Mode only)
# --------------------------------------------
# For local testing, use MailHog: docker run -p 1025:1025 -p 8025:8025 mailhog/mailhog
# For Gmail: Use an App Password (not your regular password)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false

# --------------------------------------------
# AI/LLM Provider (Optional - for AI Mode)
# --------------------------------------------
# Get a free Groq API key at: https://console.groq.com
# The free tier includes generous rate limits for testing
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# OpenAI (alternative, not currently used)
OPENAI_API_KEY=
LLM_MODEL=gpt-4o-mini
